#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

if [[ ! -f "$ROOT_DIR/packages/cli/dist/cli.js" ]]; then
  echo "clawguard: missing packages/cli/dist/cli.js; run: pnpm -C \"$ROOT_DIR\" -r build" >&2
  exit 1
fi

exec node "$ROOT_DIR/packages/cli/dist/cli.js" "$@"

