{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["api_version", "risk_score", "findings"],
  "properties": {
    "api_version": { "type": "number", "enum": [1] },
    "risk_score": { "type": "number" },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["rule_id", "severity", "reason_code", "evidence"],
        "properties": {
          "rule_id": { "type": "string" },
          "severity": { "type": "string" },
          "reason_code": { "type": "string" },
          "file": { "type": "string" },
          "line": { "type": "number" },
          "column": { "type": "number" },
          "evidence": { "type": "string" }
        }
      }
    }
  }
}
